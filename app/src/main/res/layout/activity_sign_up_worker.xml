<?xml version="1.0" encoding="utf-8"?>

<!-- 아르바이트생 회원가입 정보 입력 화면 -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8F9"
    tools:context=".SignUpWorkerActivity">

    <!-- 상단 영역을 구분하기 위한 배경 뷰 -->
    <View
        android:id="@+id/view_signup_top_bar"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 이전 화면으로 돌아가기 위한 버튼 -->
    <ImageButton
        android:id="@+id/btn_signup_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="뒤로가기"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 현재 화면이 회원가입 단계임을 표시하는 제목 -->
    <TextView
        android:id="@+id/tv_signup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_signup_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_signup_back" />

    <!-- 사용자 이름을 입력받기 위한 필드 -->
    <EditText
        android:id="@+id/et_signup_name"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_input_field"
        android:hint="이름을 입력해주세요."
        android:inputType="textPersonName"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_signup_top_bar" />

    <!-- 사용자 이름 미입력시 필수 입력임을 알리는 메시지 -->
    <TextView
        android:id="@+id/tv_signup_name_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:text="이름은 필수 항목입니다. 이름을 입력해주세요."
        android:textColor="#777D88"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/et_signup_name"
        app:layout_constraintTop_toBottomOf="@id/et_signup_name" /> />

    <!-- 이메일 입력 및 중복 확인을 위한 영역 -->
    <LinearLayout
        android:id="@+id/layout_signup_email"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/et_signup_name"
        app:layout_constraintStart_toStartOf="@id/et_signup_name"
        app:layout_constraintTop_toBottomOf="@id/et_signup_name">

        <!-- 사용자 이메일(아이디) 입력 필드 -->
        <EditText
            android:id="@+id/et_signup_email"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_input_field"
            android:hint="아이디(이메일)"
            android:inputType="textEmailAddress"
            android:paddingHorizontal="20dp" />

        <!-- 이메일 중복 여부를 확인하는 버튼 -->
        <Button
            android:id="@+id/btn_signup_check_email"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:backgroundTint="#0068FF"
            android:insetTop="1dp"
            android:insetBottom="1dp"
            android:text="중복확인"
            android:textColor="#F7F8F9"
            android:textStyle="bold"
            app:cornerRadius="10dp" />
    </LinearLayout>

    <!-- 이메일 중복 확인 결과를 안내하는 메시지 -->
    <TextView
        android:id="@+id/tv_signup_email_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:text="사용 가능한 이메일입니다.OR 중복된 이메일입니다. 다시 입력해주세요."
        android:textColor="#777D88"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/layout_signup_email"
        app:layout_constraintTop_toBottomOf="@id/layout_signup_email" />

    <!-- 사용자 비밀번호 입력 필드 -->
    <EditText
        android:id="@+id/et_signup_pw"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_input_field"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="@id/et_signup_name"
        app:layout_constraintStart_toStartOf="@id/et_signup_name"
        app:layout_constraintTop_toBottomOf="@id/layout_signup_email" />

    <!-- 비밀번호 입력 규칙을 안내하는 문구 -->
    <TextView
        android:id="@+id/tv_signup_pw_guide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginStart="8dp"
        android:text="비밀번호는 반드시 8자리 이상, 문자/숫자/기호만 사용 가능합니다."
        android:textColor="#777D88"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/et_signup_pw"
        app:layout_constraintTop_toBottomOf="@id/et_signup_pw" />

    <!-- 비밀번호 확인 입력 필드 -->

    <!-- 비밀번호 불일치 시 안내 메시지 -->
    <EditText
        android:id="@+id/et_signup_pw_confirm"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/bg_input_field"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="@id/et_signup_name"
        app:layout_constraintStart_toStartOf="@id/et_signup_name"
        app:layout_constraintTop_toBottomOf="@id/tv_signup_pw_guide" />

    <TextView
        android:id="@+id/tv_signup_pw_confirm_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:text="비밀번호가 일치하지 않습니다. 다시 입력해주세요. OR 비밀번호를 입력해주세요."
        android:textColor="#777D88"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/et_signup_pw_confirm"
        app:layout_constraintTop_toBottomOf="@id/et_signup_pw_confirm" />

    <!-- 입력한 회원가입 정보를 제출하는 버튼 -->
    <Button
        android:id="@+id/btn_signup_submit"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="#0068FF"
        android:text="가입하기"
        android:textColor="#F7F8F9"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

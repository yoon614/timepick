<?xml version="1.0" encoding="utf-8"?>

<!-- 로그인 화면 레이아웃 -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8F9"
    tools:context=".LoginActivity">

    <!-- 상단 앱바 영역을 구분하기 위한 배경 뷰 -->
    <View
        android:id="@+id/view_login_top_bar"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 이전 화면으로 돌아가기 위한 버튼 -->
    <ImageButton
        android:id="@+id/btn_login_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="뒤로가기"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 현재 화면이 로그인 화면임을 나타내는 제목 -->
    <TextView
        android:id="@+id/tv_login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_login_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_login_back" />

    <!-- 사용자 이메일(아이디) 입력 필드 -->
    <EditText
        android:id="@+id/et_login_email"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/bg_input_field"
        android:hint="아이디(이메일)"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_login_top_bar" />

    <!-- 이메일 입력 오류 발생 시 안내 메시지 -->
    <TextView
        android:id="@+id/tv_error_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:text="아이디가 일치하지 않습니다. 다시 입력해주세요."
        android:textColor="#777D88"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/et_login_email"
        app:layout_constraintTop_toBottomOf="@id/et_login_email" />

    <!-- 사용자 비밀번호 입력 필드 -->
    <EditText
        android:id="@+id/et_login_pw"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_input_field"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:paddingHorizontal="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_login_email" />

    <!-- 비밀번호 입력 오류 발생 시 안내 메시지 -->
    <TextView
        android:id="@+id/tv_error_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:text="비밀번호가 일치하지 않습니다. 다시 입력해주세요."
        android:textColor="#777D88"
        android:textSize="10sp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="@id/et_login_pw"
        app:layout_constraintTop_toBottomOf="@id/et_login_pw" />

    <!-- 로그인 버튼 -->
    <Button
        android:id="@+id/btn_login_submit"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#0068FF"
        android:text="로그인"
        android:textColor="#F7F8F9"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_login_pw" />

    <!-- 회원가입 화면으로 이동할 수 있는 안내 영역 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/btn_login_submit"
        app:layout_constraintTop_toBottomOf="@id/btn_login_submit">

        <!-- 회원 여부 안내 문구 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아직 회원이 아니신가요? "
            android:textColor="#777D88"
            android:textSize="12sp" />

        <!-- 회원가입 화면으로 이동하는 텍스트 버튼 -->
        <TextView
            android:id="@+id/tv_login_go_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입하기"
            android:textColor="#0068FF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

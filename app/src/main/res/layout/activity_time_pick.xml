<?xml version="1.0" encoding="utf-8"?>
<!-- 타임픽 화면 전체 레이아웃 -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".TimePickActivity">

    <!-- 상단 헤더 영역 (타임픽 설명 영역) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_timepick_header"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#0068FF"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 타임픽 제목 -->
        <TextView
            android:id="@+id/tv_timepick_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="88dp"
            android:text="타임 픽"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 타임픽 설명 문구 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:lineSpacingExtra="4dp"
            android:text="근무 가능한 모든 시간을 픽해주세요.\n픽해주신 시간에 80% 부합한 아르바이트 구인 공고를 만나보실 수 있습니다."
            android:textColor="#FFFFFF"
            android:textSize="8sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@id/tv_timepick_title"
            app:layout_constraintTop_toBottomOf="@id/tv_timepick_title" />

        <!-- 헤더 우측 일러스트 이미지 -->
        <ImageView
            android:layout_width="188dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_timepick_header_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 요일 표시 영역 -->
    <LinearLayout
        android:id="@+id/layout_days"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="67dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_timepick_header">

        <!-- 각 요일 텍스트 -->
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="월" android:textColor="#A6AAB3" android:textSize="12sp" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="화" android:textColor="#A6AAB3" android:textSize="12sp" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="수" android:textColor="#A6AAB3" android:textSize="12sp" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="목" android:textColor="#A6AAB3" android:textSize="12sp" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="금" android:textColor="#A6AAB3" android:textSize="12sp" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="토" android:textColor="#A6AAB3" android:textSize="12sp" />
        <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center" android:text="일" android:textColor="#A6AAB3" android:textSize="12sp" />
    </LinearLayout>

    <!-- 시간 선택 영역 (스크롤 가능) -->
    <ScrollView
        android:id="@+id/sv_time_table"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_days">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 시간 + 타임테이블 영역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal"
                android:paddingBottom="20dp">

                <!-- 좌측 시간 표시 컬럼 -->
                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 시간 텍스트 (07:00 ~ 24:00) -->
                    <TextView android:layout_width="match_parent" android:layout_height="60dp" android:gravity="center_horizontal" android:paddingTop="4dp" android:text="07:00" android:textColor="#A6AAB3" android:textSize="10sp" />
                    <TextView android:layout_width="match_parent" android:layout_height="60dp" android:gravity="center_horizontal" android:paddingTop="4dp" android:text="08:00" android:textColor="#A6AAB3" android:textSize="10sp" />
                    <TextView android:layout_width="match_parent" android:layout_height="60dp" android:gravity="center_horizontal" android:paddingTop="4dp" android:text="09:00" android:textColor="#A6AAB3" android:textSize="10sp" />
                    <TextView android:layout_width="match_parent" android:layout_height="60dp" android:gravity="center_horizontal" android:paddingTop="4dp" android:text="10:00" android:textColor="#A6AAB3" android:textSize="10sp" />
                    <TextView android:layout_width="match_parent" android:layout_height="60dp" android:gravity="center_horizontal" android:paddingTop="4dp" android:text="11:00" android:textColor="#A6AAB3" android:textSize="10sp" />
                    <TextView android:layout_width="match_parent" android:layout_height="60dp" android:gravity="center_horizontal" android:paddingTop="4dp" android:text="12:00" android:textColor="#A6AAB3" android:textSize="10sp" />
                    <TextView android:layout_width="match_parent" android:layout_height="60dp" android:gravity="center_horizontal" android:paddingTop="4dp" android:text="13:00" android:textColor="#A6AAB3" android:textSize="10sp" />
                    <TextView android:layout_width="match_parent" android:layout_height="60dp" android:gravity="center_horizontal" android:paddingTop="4dp" android:text="14:00" android:textColor="#A6AAB3" android:textSize="10sp" />
                    <TextView android:layout_width="match_parent" android:layout_height="60dp" android:gravity="center_horizontal" android:paddingTop="4dp" android:text="15:00" android:textColor="#A6AAB3" android:textSize="10sp" />
                    <TextView android:layout_width="match_parent" android:layout_height="60dp" android:gravity="center_horizontal" android:paddingTop="4dp" android:text="16:00" android:textColor="#A6AAB3" android:textSize="10sp" />
                    <TextView android:layout_width="match_parent" android:layout_height="60dp" android:gravity="center_horizontal" android:paddingTop="4dp" android:text="17:00" android:textColor="#A6AAB3" android:textSize="10sp" />
                    <TextView android:layout_width="match_parent" android:layout_height="60dp" android:gravity="center_horizontal" android:paddingTop="4dp" android:text="18:00" android:textColor="#A6AAB3" android:textSize="10sp" />
                    <TextView android:layout_width="match_parent" android:layout_height="60dp" android:gravity="center_horizontal" android:paddingTop="4dp" android:text="19:00" android:textColor="#A6AAB3" android:textSize="10sp" />
                    <TextView android:layout_width="match_parent" android:layout_height="60dp" android:gravity="center_horizontal" android:paddingTop="4dp" android:text="20:00" android:textColor="#A6AAB3" android:textSize="10sp" />
                    <TextView android:layout_width="match_parent" android:layout_height="60dp" android:gravity="center_horizontal" android:paddingTop="4dp" android:text="21:00" android:textColor="#A6AAB3" android:textSize="10sp" />
                    <TextView android:layout_width="match_parent" android:layout_height="60dp" android:gravity="center_horizontal" android:paddingTop="4dp" android:text="22:00" android:textColor="#A6AAB3" android:textSize="10sp" />
                    <TextView android:layout_width="match_parent" android:layout_height="60dp" android:gravity="center_horizontal" android:paddingTop="4dp" android:text="23:00" android:textColor="#A6AAB3" android:textSize="10sp" />
                    <TextView android:layout_width="match_parent" android:layout_height="60dp" android:gravity="center_horizontal" android:paddingTop="4dp" android:text="24:00" android:textColor="#A6AAB3" android:textSize="10sp" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#E9EAED">

                    <!-- 실제 시간 선택용 RecyclerView (7일 x 시간 그리드) -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_time_table"
                        android:layout_width="match_parent"
                        android:layout_height="1085dp"
                        android:background="@drawable/bg_time_table_container"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="7"
                        tools:itemCount="252"
                        tools:listitem="@layout/item_time_slot" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- 타임픽 선택 완료 버튼 -->
            <Button
                android:id="@+id/btn_timepick_confirm"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                android:backgroundTint="#0068FF"
                android:text="확인"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:cornerRadius="12dp" />

        </LinearLayout>
    </ScrollView>

    <!-- 하단 네비게이션 바 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_nav"
        android:elevation="20dp"
        app:itemRippleColor="@android:color/transparent"
        app:itemIconTint="@color/selector_nav_item"
        app:itemTextColor="@color/selector_nav_item"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

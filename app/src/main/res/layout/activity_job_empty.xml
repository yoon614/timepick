<?xml version="1.0" encoding="utf-8"?>
<!-- 모집 공고가 없을 때 보여주는 빈 상태 화면 레이아웃 -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 상단 툴바 배경-->
    <View
        android:id="@+id/view_empty_toolbar_bg"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 이전 화면으로 돌아가기 위한 뒤로가기 버튼 -->
    <ImageButton
        android:id="@+id/btn_empty_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 툴바 중앙에 표시되는 화면 제목 텍스트 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모집 중인 공고"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_empty_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_empty_back" />

    <!-- 공고가 없을 때 안내 이미지와 문구를 묶는 중앙 영역 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_empty_toolbar_bg"
        app:layout_constraintVertical_bias="0.4">

        <!-- 빈 상태 이미지 -->
        <ImageView
            android:id="@+id/iv_empty_img"
            android:layout_width="178dp"
            android:layout_height="197dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_job_empty" />

        <!-- 공고가 없음을 안내하는 설명 문구 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:text="해당 시간에 일치하는 모집 공고가 없습니다.\n다시 검색해주세요."
            android:textColor="#A6AAB3"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

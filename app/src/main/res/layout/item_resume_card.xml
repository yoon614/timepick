<?xml version="1.0" encoding="utf-8"?>
<!-- 이력서 목록에서 사용되는 개별 카드 아이템 레이아웃 -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="false">

    <!-- 카드 내부 콘텐츠 영역 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:padding="15dp">

        <!-- 이력서 작성자 이름 -->
        <TextView
            android:id="@+id/tv_resume_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성자 이름"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 이력서 상세 화면으로 이동하는 버튼 -->
        <ImageButton
            android:id="@+id/btn_resume_detail"
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_back_arrow"
            android:rotation="180"
            app:layout_constraintBottom_toBottomOf="@id/tv_resume_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_resume_name" />

        <!-- 이력서 기본 정보 영역 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_resume_name">

            <!-- 이력서 작성 날짜 -->
            <TextView
                android:id="@+id/tv_resume_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="2026.01.21"
                android:textColor="#A6AAB3"
                android:textSize="12sp" />

            <!-- 희망 근무 지역 정보 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="희망 지역 |"
                    android:textColor="#A6AAB3"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_resume_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="희망 지역명"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <!-- 희망 직종 정보 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="희망 직종 |"
                    android:textColor="#A6AAB3"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_resume_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="희망 직종명"
                    android:textColor="#000000"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

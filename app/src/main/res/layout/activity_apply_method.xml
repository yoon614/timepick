<?xml version="1.0" encoding="utf-8"?>

<!-- 지원 방식 선택 화면 전체 레이아웃 -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ApplyMethodActivity">

    <!-- 상단 바 영역 -->
    <View
        android:id="@+id/view_top_bar"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 뒤로가기 버튼 -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="뒤로가기"
        android:padding="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 화면 제목 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지원하기"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/btn_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/btn_back" />

    <!-- 이력서 없이 지원 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_no_resume"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="40dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#F7F8F9"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view_top_bar">

        <!-- 카드 내부 텍스트 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <!-- 이력서 없이 지원 제목 -->
            <TextView
                android:id="@+id/tv_no_resume_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이력서 없이 지원"
                android:textColor="#18191C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- 이력서 없이 지원 설명 -->
            <TextView
                android:id="@+id/tv_no_resume_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="회원님의 이름, 이메일만 전달됩니다."
                android:textColor="#777D88"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 이력서 작성 후 지원 카드 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_create_resume"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#F7F8F9"
        app:cardCornerRadius="16dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_no_resume">

        <!-- 카드 내부 텍스트 영역 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <!-- 이력서 작성 안내 제목 -->
            <TextView
                android:id="@+id/tv_create_resume_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이력서 만들러 가기"
                android:textColor="#18191C"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- 이력서 작성 안내 설명 -->
            <TextView
                android:id="@+id/tv_create_resume_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="작성하신 이력서가 전달됩니다."
                android:textColor="#777D88"
                android:textSize="14sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 다음 버튼 -->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="70dp"
        android:backgroundTint="#0068FF"
        android:text="다음"
        android:textColor="#F7F8F9"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

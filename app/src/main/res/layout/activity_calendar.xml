<?xml version="1.0" encoding="utf-8"?>
<!-- 캘린더 화면 전체 레이아웃 -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 상단 화면 제목 -->
    <TextView
        android:id="@+id/tv_calendar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="캘린더"
        android:textColor="#18191C"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 월별 요약 영역 (현재 월 + 총 수입 + 세금 계산 체크) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_month_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/tv_calendar_title">

        <!-- 현재 보고 있는 월 -->
        <TextView
            android:id="@+id/tv_current_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2026년 1월"
            android:textColor="#18191C"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 해당 월 총 수입 금액 -->
        <TextView
            android:id="@+id/tv_total_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="409,023원"
            android:textColor="#18191C"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 세금(3.3%) 계산 여부 체크박스 -->
        <CheckBox
            android:id="@+id/cb_tax_calc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableEnd="@drawable/selector_checkbox_custom"
            android:gravity="center_vertical"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_marginTop="5dp"
            android:paddingStart="6dp"
            android:text="세금(3.3%) 계산 "
            android:textColor="#777D88"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_total_income"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 요일 헤더 (일 ~ 토) -->
    <LinearLayout
        android:id="@+id/layout_week_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/layout_month_summary">

        <!-- 일요일 (빨간색) -->
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center"
            android:text="일" android:textColor="#E40000" android:textStyle="bold"/>

        <!-- 월 ~ 금 -->
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center"
            android:text="월" android:textColor="#000000" android:textStyle="bold"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center"
            android:text="화" android:textColor="#000000" android:textStyle="bold"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center"
            android:text="수" android:textColor="#000000" android:textStyle="bold"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center"
            android:text="목" android:textColor="#000000" android:textStyle="bold"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center"
            android:text="금" android:textColor="#000000" android:textStyle="bold"/>

        <!-- 토요일 (파란색) -->
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
            android:layout_weight="1" android:gravity="center"
            android:text="토" android:textColor="#0652EB" android:textStyle="bold"/>
    </LinearLayout>

    <!-- Kizitonwose 커스텀 캘린더 뷰 -->
    <com.kizitonwose.calendar.view.CalendarView
        android:id="@+id/calendar_view_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="10dp"
        app:cv_dayViewResource="@layout/item_calendar_day"
        app:cv_outDateStyle="endOfGrid"
        app:layout_constraintTop_toBottomOf="@id/layout_week_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 캘린더와 일별 리스트 사이 구분선 -->
    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0"
        app:layout_constraintTop_toBottomOf="@id/calendar_view_custom" />

    <!-- 선택된 날짜 + 일정 추가 버튼 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_daily_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp"
        app:layout_constraintTop_toBottomOf="@id/view_divider">

        <!-- 선택된 날짜 표시 -->
        <TextView
            android:id="@+id/tv_selected_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1월 18일 (토)"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- 근무 일정 추가 버튼 -->
        <ImageButton
            android:id="@+id/btn_add_work"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_plus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 선택된 날짜의 근무 기록 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_daily_work_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#F8F9FA"
        android:clipToPadding="false"
        android:paddingBottom="20dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/layout_daily_header"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        tools:listitem="@layout/item_work_log_card" />

    <!-- 하단 네비게이션 바 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bottom_nav"
        android:elevation="20dp"
        app:itemIconTint="@color/selector_nav_item"
        app:itemRippleColor="@android:color/transparent"
        app:itemTextColor="@color/selector_nav_item"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/menu_bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
